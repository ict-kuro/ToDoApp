@{
    @model TodoApp_Master.ViewModels.LoginRegister;
}
<head>
</head>
<body>
    <h3 style="text-align: center;">新規登録</h3>
    <div class="login">
        <div class="login_form">
            <form asp-action="UserRegister" method="post" class="login_input">
                <p>ユーザーID: <input asp-for="UserId" placeholder="ユーザーID"></p>
                <span asp-validation-for="UserId" class="text-danger"></span>
                <p>パスワード: <input asp-for="Password" placeholder="パスワード"></p>
                <span asp-validation-for="Password" class="text-danger"></span>
                <p>パスワード（確認）: <input asp-for="tempPassword" placeholder="パスワード"></p>
                <span asp-validation-for="tempPassword" class="text-danger"></span>
                <input type="submit" name="ログイン" class="login_button">
            </form>
            <p style="color: red">@ViewData["message"]</p>
            <p></p>
            <a asp-controller="/Login" asp-action="Index">ログイン画面に戻る</a>
        </div>
    </div>
</body>
